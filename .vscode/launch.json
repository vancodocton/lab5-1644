    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "stopOnEntry": true,
            "cwd": "${fileDirname}",
            "port" : 9000,
            "runtimeExecutable": "C:/Bitnami/wappstack-8.0.2-0/php/php.exe"
        },
        {
            "name": "Listen for XDebug",
            "request": "launch",
            "type": "php",
            "port" : 9000
        },

        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "pwa-msedge",
            "url": "http://localhost/lab5-1644/backend/dbConnect.php",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Debug Login page",
            "request": "launch",
            "type": "pwa-msedge",
            "url": "http://localhost/lab5-1644/login.php",
            "webRoot": "${workspaceFolder}",
            "cleanUp": "onlyTab"
        },
        {
            "name": "Launch lab5-1644",
            "request": "launch",
            "type": "pwa-msedge",
            "url": "http://localhost/lab5-1644",
            "webRoot": "${workspaceFolder}\\lab5-1644"
        },
        {
            "type": "pwa-msedge",
            "request": "launch",
            "name": "Launch Edge against localhost",
            "url": "http://localhost",
            "webRoot": "${workspaceFolder}",
        }
    ]
}